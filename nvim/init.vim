set clipboard+=unnamedplus

" no swap file
set noswapfile

"save undo-trees in files
set undofile
set undodir=$HOME/.config/nvim/undo
set undolevels=1000
set undoreload=1000

" set linenumber
set number

" use 4 spaces instead of tab()
" copy intend from curent line when starting a new line
set autoindent
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

